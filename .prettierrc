{
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"trailingComma": "all",
	"printWidth": 120,
	"singleQuote": true,
	"tabWidth": 4,
	"useTabs": true,
	"plugins": ["@prettier/plugin-oxc"],
	"overrides": [
		{
			"files": ".prettierrc",
			"options": { "parser": "json" }
		},
		{
			"files": "**/*.md",
			"options": { "tabWidth": 2 }
		}
	]
}
