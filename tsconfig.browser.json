{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "es2023"],
		"paths": {
			"@env/*": ["./src/env/browser/*"],
			"path": ["./node_modules/path-browserify"]
		},
		"tsBuildInfoFile": "tsconfig.browser.tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/__tests__/**/*", "src/**/webview/**/*", "src/webviews/apps/**/*", "src/env/node/**/*"]
}
