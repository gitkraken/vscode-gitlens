{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "es2022", "esnext.disposable"],
		"paths": {
			"@env/*": ["src/env/browser/*"],
			"path": ["node_modules/path-browserify"]
		},
		"tsBuildInfoFile": "tsconfig.browser.tsbuildinfo"
	},
	"include": ["src/**/*"],
	"exclude": ["src/test/**/*", "src/webviews/apps/**/*", "src/env/node/**/*"]
}
